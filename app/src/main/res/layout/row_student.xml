<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    android:background="@color/black"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llOneStudentRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/paleNight_foreground"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/studentAvatarList"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_launcher_background"/>

            <EditText
                android:id="@+id/studentNameList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="center"
                android:textColor="@color/paleNight_text"
                android:textSize="16dp"
                android:text="Student name"/>

            <TextView
                android:id="@+id/studentScoreList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/paleNight_text"
                android:textSize="16dp"
                android:text="100"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>