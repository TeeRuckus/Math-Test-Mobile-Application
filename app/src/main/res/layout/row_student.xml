<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    android:background="@color/black"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llOneStudentRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/paleNight_foreground"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/studentAvatarList"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_background"/>

            <EditText
                android:id="@+id/studentNameList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/paleNight_text"
                android:textColorHint="@color/paleNight_text"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/studentScoreList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/paleNight_text"
                android:textSize="16dp"
                android:text="100"/>

            <ImageButton
                android:id="@+id/viewStudentRow"
                android:layout_width="16dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:drawable/ic_menu_info_details"/>

            <ImageButton
                android:id="@+id/deleteStudentRow"
                android:layout_width="16dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:background="@android:drawable/ic_delete"/>



        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>