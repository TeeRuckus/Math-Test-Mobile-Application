<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    android:padding="1dp"
    android:background="@color/black"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    android:layout_height="wrap_content">
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/paleNight_foreground"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/internetImageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/internetImageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search key #"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/internetImageView"
        android:textColor="@color/paleNight_text"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>